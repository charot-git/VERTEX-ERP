                        <VBox>
                           <children>
                              <Label fx:id="companyNameLabel" text="Branch">
                                 <VBox.margin>
                                    <Insets left="10.0" />
                                 </VBox.margin>
                              </Label>
                              <ComboBox fx:id="branch" editable="true" prefWidth="150.0" />
                              <Label fx:id="branchErr" layoutX="20.0" layoutY="10.0" style="-fx-text-fill: #ff0000;" textFill="RED">
