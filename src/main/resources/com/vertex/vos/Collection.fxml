<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vertex.vos.CollectionController">
   <stylesheets>
      <URL value="@assets/style.css" />
      <URL value="@assets/table.css" />
      <URL value="@assets/global.css" />
   </stylesheets>
   <top>
      <HBox spacing="10.0">
         <children>
            <Label styleClass="header" text="CEX#" />
            <VBox>
               <children>
                  <Label text="Date Encoded" />
                  <DatePicker />
               </children>
            </VBox>
            <VBox layoutX="78.0" layoutY="10.0">
               <children>
                  <Label text="Collection Date" />
                  <DatePicker />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Salesman" />
                  <TextField />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Collected By" />
                  <TextField />
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <left>
      <VBox BorderPane.alignment="CENTER" />
   </left>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" text="Save" />
            <Button layoutX="670.0" layoutY="10.0" mnemonicParsing="false" text="Post" />
        </buttons>
      </ButtonBar>
   </bottom>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
            <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <TableView>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <columns>
                              <TableColumn prefWidth="75.0" text="Document">
                                 <columns>
                                    <TableColumn prefWidth="75.0" text="Type" />
                                    <TableColumn prefWidth="75.0" text="No" />
                                 </columns>
                              </TableColumn>
                              <TableColumn prefWidth="75.0" text="Customer Name" />
                              <TableColumn prefWidth="75.0" text="Amount" />
                              <TableColumn prefWidth="75.0" text="Created At" />
                              <TableColumn prefWidth="75.0" text="Remarks" />
                           </columns>
                        </TableView>
                     </center>
                     <bottom>
                        <VBox alignment="TOP_RIGHT" BorderPane.alignment="CENTER">
                           <children>
                              <ButtonBar prefHeight="40.0" prefWidth="200.0">
                                <buttons>
                                  <Button mnemonicParsing="false" text="Add Invoice" />
                                    <Button layoutX="150.0" layoutY="10.0" mnemonicParsing="false" text="Add Returns" />
                                    <Button layoutX="155.0" layoutY="10.0" mnemonicParsing="false" text="Add Memo" />
                                </buttons>
                              </ButtonBar>
                              <Label text="Total" />
                           </children>
                        </VBox>
                     </bottom>
                  </BorderPane>
                  <BorderPane layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                           <columns>
                              <TableColumn prefWidth="75.0" text="Type" />
                              <TableColumn prefWidth="75.0" text="Bank" />
                              <TableColumn prefWidth="75.0" text="Check No." />
                              <TableColumn prefWidth="75.0" text="Check Date" />
                              <TableColumn prefWidth="75.0" text="Amount" />
                              <TableColumn prefWidth="75.0" text="Remarks" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </center>
                     <bottom>
                        <VBox alignment="TOP_RIGHT" BorderPane.alignment="CENTER">
                           <children>
                              <ButtonBar prefHeight="40.0" prefWidth="200.0">
                                <buttons>
                                    <Button layoutX="150.0" layoutY="10.0" mnemonicParsing="false" text="Add Payment" />
                                    <Button layoutX="145.0" layoutY="10.0" mnemonicParsing="false" text="Add Adjustment" />
                                </buttons>
                              </ButtonBar>
                              <Label text="Total" />
                           </children>
                        </VBox>
                     </bottom>
                  </BorderPane>
              </items>
            </SplitPane>
         </center>
         <bottom>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Label text="Remarks" />
                  <TextArea prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
