            <Button fx:id="selectHelper" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Helpers" />
            <Button fx:id="selectDriver" layoutX="130.0" layoutY="10.0" mnemonicParsing="false" text="Driver" />
            <Button fx:id="confirmButton" mnemonicParsing="false" text="Commit" />
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@assets/style.css" />
      <URL value="@assets/global.css" />
