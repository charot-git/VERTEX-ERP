                        </children>
                    </VBox>
                    <HBox fx:id="confirmBox" alignment="CENTER_RIGHT">
                        <children>
                            <Button fx:id="confirmButton" mnemonicParsing="false" styleClass="text-input" stylesheets="@assets/style.css" text="Confirm" />
                        </children>
                        <VBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                    </HBox>
                </children>
            </VBox>
        </content>
    </ScrollPane>
    <stylesheets>
        <URL value="@assets/style.css" />
        <URL value="@assets/global.css" />
    </stylesheets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

</AnchorPane>
