<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vertex.vos.PayablesFormController">
    <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <content>
            <VBox fx:id="POContent" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" style="-fx-background-color: transparent;">
                <children>
                    <AnchorPane>
                        <children>
                            <HBox alignment="CENTER_LEFT" layoutX="425.0" layoutY="19.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <children>
                                    <Label fx:id="orderNo" styleClass="header" text="COD\CWO\GR Label" />
                                    <Label fx:id="paymentTerms" style="-fx-text-fill: linear-gradient(to right, #155d99, #5A90CF); -fx-font-size: 16;" styleClass="header" stylesheets="@assets/style.css" text="PAYMENT TERMS" />
                                    <Label fx:id="receivingTerms" style="-fx-text-fill: linear-gradient(to right, #5A90CF,  #155d99); -fx-font-size: 16;" styleClass="header" stylesheets="@assets/style.css" text="RECEIVING TYPE" />
                                    <CheckBox fx:id="receiptCheckBox" mnemonicParsing="false" text="Invoice Receipt" />
                                </children>
                            </HBox>
                            <HBox fx:id="statusBox" alignment="CENTER" layoutX="724.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <children>
                                    <Label fx:id="statusLabel" style="-fx-text-fill: linear-gradient(to right, #155d99, #5A90CF); -fx-font-size: 16;" styleClass="header" stylesheets="@assets/style.css" text="STATUS" />
                                    <ImageView fx:id="statusImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@assets/icons/Purchase Order.png" />
                                        </image>
                                    </ImageView>
                                </children>
                            </HBox>
                        </children>
                    </AnchorPane>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <VBox fx:id="supplierBox">
                                <children>
                                    <Label fx:id="businessTypeLabel" text="Supplier Name">
                                        <VBox.margin>
                                            <Insets left="10.0" />
                                        </VBox.margin>
                                    </Label>
                                    <ComboBox fx:id="supplier" editable="true" prefWidth="150.0" />
                                    <Label fx:id="supplierErr" layoutX="20.0" layoutY="10.0" style="-fx-text-fill: #ff0000;" textFill="RED">
                                        <VBox.margin>
                                            <Insets left="10.0" />
                                        </VBox.margin>
                                    </Label>
                                </children>
                            </VBox>
                            <VBox layoutX="10.0" layoutY="10.0">
                                <children>
                                    <Label fx:id="businessTypeLabel1" text="Chart Of Account">
                                        <VBox.margin>
                                            <Insets left="10.0" />
                                        </VBox.margin>
                                    </Label>
                                    <ComboBox fx:id="chartOfAccount" editable="true" prefWidth="150.0" />
                                    <Label fx:id="chartOfAccountErr" layoutX="20.0" layoutY="10.0" style="-fx-text-fill: #ff0000;" textFill="RED">
                                        <VBox.margin>
                                            <Insets left="10.0" />
                                        </VBox.margin>
                                    </Label>
                                </children>
                            </VBox>
                            <VBox fx:id="leadTimePaymentBox">
                                <children>
                                    <Label text="Lead Time - Payment">
                                        <VBox.margin>
                                            <Insets left="10.0" />
                                        </VBox.margin>
                                    </Label>
                                    <DatePicker fx:id="leadTimePaymentDatePicker" />
                                    <Label layoutX="20.0" layoutY="10.0" style="-fx-text-fill: #ff0000;" textFill="RED">
                                        <VBox.margin>
                                            <Insets left="10.0" />
                                        </VBox.margin>
                                    </Label>
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <HBox fx:id="leadTimeBox" alignment="CENTER_LEFT" spacing="10.0" />
                    <VBox fx:id="addBoxes">
                        <VBox.margin>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </VBox.margin>
                        <children>
                            <HBox fx:id="addDebitMemo" alignment="CENTER_LEFT" spacing="10.0">
                                <children>
                                    <VBox>
                                        <children>
                                            <HBox alignment="CENTER_LEFT">
                                                <children>
                                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                                        <image>
                                                            <Image url="@assets/icons/Add.png" />
                                                        </image>
                                                    </ImageView>
                                                    <Label fx:id="addProductLabel" style="-fx-text-fill: linear-gradient(to right, #155d99, #5A90CF); -fx-font-size: 15;" styleClass="sub-header" text="Add Debit Memo" />
                                                </children>
                                            </HBox>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                            <HBox fx:id="addCreditMemo" alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" spacing="10.0">
                                <children>
                                    <VBox>
                                        <children>
                                            <HBox alignment="CENTER_LEFT">
                                                <children>
                                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                                        <image>
                                                            <Image url="@assets/icons/Add.png" />
                                                        </image>
                                                    </ImageView>
                                                    <Label fx:id="addProductLabel1" style="-fx-text-fill: linear-gradient(to right, #155d99, #5A90CF); -fx-font-size: 15;" styleClass="sub-header" text="Add Credit Memo" />
                                                </children>
                                            </HBox>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                    <TabPane stylesheets="@assets/style.css" tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <Tab text="Product Summary">
                                <content>
                                    <AnchorPane minHeight="0.0" minWidth="0.0">
                                        <children>
                                            <TableView stylesheets="@assets/table.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                <columns>
                                                    <TableColumn prefWidth="75.0" text="Product Description" />
                                                    <TableColumn prefWidth="75.0" text="Unit" />
                                       <TableColumn prefWidth="75.0" text="Unit Price" />
                                                    <TableColumn prefWidth="75.0" text="Quantities" />
                                                    <TableColumn prefWidth="75.0" text="Net" />
                                                    <TableColumn prefWidth="75.0" text="EWT" />
                                                    <TableColumn prefWidth="75.0" text="VAT" />
                                                    <TableColumn prefWidth="75.0" text="Total Amount" />
                                                </columns>
                                                <columnResizePolicy>
                                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                </columnResizePolicy>
                                            </TableView>
                                        </children>
                                    </AnchorPane>
                                </content>
                            </Tab>
                            <Tab text="Adjustments">
                                <content>
                                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                        <children>
                                            <TableView stylesheets="@assets/table.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                <columns>
                                                    <TableColumn prefWidth="75.0" text="Remarks" />
                                                    <TableColumn prefWidth="75.0" text="Amount" />
                                                </columns>
                                                <columnResizePolicy>
                                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                </columnResizePolicy>
                                            </TableView>
                                        </children>
                                    </AnchorPane>
                                </content>
                            </Tab>
                        </tabs>
                    </TabPane>
                    <VBox fx:id="totalVBox" spacing="10.0">
                        <children>
                            <HBox fx:id="totalBox" alignment="CENTER_RIGHT" spacing="20.0">
                                <children>
                                    <VBox fx:id="totalBoxLabels" alignment="CENTER_RIGHT" spacing="5.0">
                                        <children>
                                            <Label fx:id="gross" layoutX="13.0" layoutY="10.0" style="-fx-font-size: 14;" styleClass="sub-header" stylesheets="@assets/style.css" text="Net Amount : " />
                                            <Label fx:id="discounted" layoutX="13.0" layoutY="10.0" style="-fx-font-size: 14;" styleClass="sub-header" stylesheets="@assets/style.css" text="Gross Amount : " />
                                            <Label fx:id="withholding" style="-fx-font-size: 14;" styleClass="sub-header" stylesheets="@assets/style.css" text="Withholding Tax : " />
                                            <Label fx:id="vat" style="-fx-font-size: 14;" styleClass="sub-header" stylesheets="@assets/style.css" text="Value Added Tax : " />
                                            <Label fx:id="grandTotal" style="-fx-font-size: 14;" styleClass="sub-header" stylesheets="@assets/style.css" text="Grand Total : " />
                                        </children>
                                    </VBox>
                                </children>
                                <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
