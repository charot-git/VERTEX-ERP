<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="1080.0" style="-fx-background-radius: 20px 0px 0px 0px; -fx-background-color: #f0f0f0;" stylesheets="@assets/style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vertex.vos.EmployeeDetailsController">
   <children>
      <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" styleClass="text" stylesheets="@assets/style.css">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <ImageView fx:id="profilePic" fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@assets/icons/profile.png" />
                           </image>
                        </ImageView>
                        <VBox>
                           <children>
                              <Label fx:id="fullName" prefHeight="35.0" prefWidth="350.0" styleClass="header" text="Profile" />
                              <Label fx:id="position" style="-fx-font-size: 18px; -fx-font-weight: 400;" styleClass="header" text="Position" />
                           </children>
                        </VBox>
                        <ImageView fx:id="editButton" fitHeight="150.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@assets/icons/editing.png" />
                           </image>
                        </ImageView>
                        <ImageView fx:id="deleteButton" fitHeight="150.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@assets/icons/delete.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label fx:id="roles" style="-fx-background-color: linear-gradient(to right, #155d99, #5A90CF); -fx-text-fill: #f0f0f0; -fx-padding: 2px 10px; -fx-background-radius: 10px; -fx-font-size: 14px;" text="Roles" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="fname" editable="false" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="First Name" styleClass="text" />
                        <TextField fx:id="mname" editable="false" layoutX="10.0" layoutY="10.0" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="Middle Name" styleClass="text" />
                        <TextField fx:id="lname" editable="false" layoutX="220.0" layoutY="10.0" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="Last Name" styleClass="text" />
                     </children>
                  </HBox>
                  <HBox layoutX="40.0" layoutY="71.0" spacing="10.0">
                     <children>
                        <TextField fx:id="province" editable="false" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="Province" styleClass="text" />
                        <TextField fx:id="city" editable="false" layoutX="10.0" layoutY="10.0" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="City" styleClass="text" />
                        <TextField fx:id="brgy" editable="false" layoutX="220.0" layoutY="10.0" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="Brgy" styleClass="text" />
                     </children>
                  </HBox>
                  <HBox layoutX="40.0" layoutY="121.0" spacing="10.0">
                     <children>
                        <TextField fx:id="contact" editable="false" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="Contact" styleClass="text" />
                        <TextField fx:id="email" editable="false" layoutX="10.0" layoutY="10.0" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="E-mail" styleClass="text" />
                        <TextField fx:id="department" editable="false" layoutX="220.0" layoutY="10.0" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="Department" styleClass="text" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="tin" editable="false" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="TIN" styleClass="text" />
                        <TextField fx:id="sss" editable="false" layoutX="10.0" layoutY="10.0" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="SSS" styleClass="text" />
                        <TextField fx:id="philHealth" editable="false" layoutX="220.0" layoutY="10.0" minWidth="200.0" prefHeight="500.0" prefWidth="500.0" promptText="PhilHealth" styleClass="text" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
